<nav class="cyber-nav-bottom">
  <div class="nav-grid">
    <!-- Accueil -->
    <%= link_to root_path, class: "nav-item" do %>
      <div class="nav-icon-cyber">
        <i class="fas fa-home"></i>
        <div class="cyber-glow-effect"></div>
      </div>
      <span class="nav-label">Accueil</span>
    <% end %>

    <!-- Collections -->
    <%= link_to collections_path, class: "nav-item" do %>
      <div class="nav-icon-cyber">
        <i class="fas fa-layer-group"></i>
        <div class="cyber-glow-effect"></div>
      </div>
      <span class="nav-label">Collections</span>
    <% end %>

    <!-- Central Add Button -->
    <div class="nav-center">
      <% if (controller_name == 'collections' && action_name == 'index') %>
        <%= link_to new_collection_path, class: "cyber-add-btn" do %>
          <i class="fas fa-plus"></i>
          <div class="pulse-ring"></div>
        <% end %>
      <% elsif (controller_name == 'categories' && action_name == 'index') %>
        <%= link_to new_collection_category_path(@collection), class: "cyber-add-btn" do %>
          <i class="fas fa-plus"></i>
          <div class="pulse-ring"></div>
        <% end %>
      <% elsif (controller_name == 'items' && action_name == 'index') %>
        <% if @category.name == "Livre" %>
          <%= link_to scan_collection_category_items_path(@collection, @category), class: "cyber-add-btn" do %>
            <i class="fas fa-plus"></i>
            <div class="pulse-ring"></div>
          <% end %>
        <% else %>
          <%= link_to new_collection_category_item_path(@collection, @category), class: "cyber-add-btn" do %>
            <i class="fas fa-plus"></i>
            <div class="pulse-ring"></div>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to "#", class: "cyber-add-btn" do %>
          <i class="fas fa-plus"></i>
          <div class="pulse-ring"></div>
        <% end %>
      <% end %>
    </div>

    <!-- Profil -->
    <%= link_to "/", class: "nav-item" do %>
      <div class="nav-icon-cyber">
        <i class="fas fa-user"></i>
        <div class="cyber-glow-effect"></div>
      </div>
      <span class="nav-label">Profil</span>
    <% end %>

    <!-- Déconnexion -->
    <%= link_to destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Se déconnecter ?" }, class: "nav-item logout" do %>
      <div class="nav-icon-cyber">
        <i class="fas fa-power-off"></i>
        <div class="cyber-glow-effect"></div>
      </div>
      <span class="nav-label">Quitter</span>
    <% end %>
  </div>
</nav>
