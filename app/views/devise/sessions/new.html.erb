<div class="home-banner">
  <div class="cyber-container">

    <!-- Terminal Header -->
    <div class="terminal-header">
      <div class="terminal-dots">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
      </div>
      <div class="terminal-title">user_login.exe</div>
    </div>

    <!-- Titre -->
    <h1 class="cyber-page-title glitch-text" data-text="CONNEXION">CONNEXION</h1>
    <p class="cyber-subtitle typing-effect">Accès au système requis</p>

    <!-- Formulaire cyberpunk -->
    <div class="cyber-form">
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "cyber-form-inner" }) do |f| %>

        <div class="form-group">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email,
                            required: false,
                            autofocus: true,
                            placeholder: "user@capsule.com",
                            autocomplete: "email",
                            class: "cyber-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Access Key" %>
          <%= f.password_field :password,
                               required: false,
                               placeholder: "••••••••••",
                               autocomplete: "current-password",
                               class: "cyber-input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group" data-controller="remember-toggle" style="text-align: left; margin-bottom: 1rem;">
            <button type="button"
                    class="cyber-btn toggle inactive"
                    data-toggle="false"
                    data-remember-toggle-target="button"
                    data-action="click->remember-toggle#toggle">
              <i class="fas fa-power-off"></i>
              <span>Maintenir la connexion</span>
            </button>
            <%= f.hidden_field :remember_me,
                               value: "0",
                               data: { "remember-toggle-target": "hiddenField" } %>
          </div>
        <% end %>

        <div class="form-actions" style="text-align: center; margin-top: 3rem;">
          <%= f.submit "INITIER CONNEXION", class: "cyber-btn primary cyber-btn-main" %>
        </div>

      <% end %>

      <!-- Navigation Links -->
      <div style="text-align: center; margin-top: 2rem;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
