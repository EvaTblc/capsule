<div class="home-banner">
  <div class="cyber-container">

    <!-- Terminal Header -->
    <div class="terminal-header">
      <div class="terminal-dots">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
      </div>
      <div class="terminal-title">user_login.exe</div>
    </div>

    <!-- Titre -->
    <h1 class="cyber-page-title glitch-text" data-text="CONNEXION">CONNEXION</h1>
    <p class="cyber-subtitle typing-effect">Accès au système requis</p>

    <!-- Formulaire cyberpunk -->
    <div class="cyber-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "cyber-form-inner" }) do |f| %>

        <div class="form-group">
          <%= f.label :email, "Email Address" %>
          <%= f.input_field :email,
                            required: false,
                            autofocus: true,
                            placeholder: "user@capsule.com",
                            input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Access Key" %>
          <%= f.input_field :password,
                            required: false,
                            placeholder: "••••••••••",
                            input_html: { autocomplete: "current-password" } %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <label>
              <%= f.input_field :remember_me, as: :boolean %>
              <span>Maintenir la connexion</span>
            </label>
          </div>
        <% end %>

        <div class="form-actions" style="text-align: center; margin-top: 2rem;">
          <%= f.button :submit, class: "cyber-btn primary" do %>
            <i class="fas fa-sign-in-alt"></i>
            INITIER CONNEXION
          <% end %>
        </div>

      <% end %>

      <!-- Navigation Links -->
      <div style="text-align: center; margin-top: 2rem;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
