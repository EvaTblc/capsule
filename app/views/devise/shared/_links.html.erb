<div class="cyber-nav-links">
  <%- if controller_name != 'sessions' %>
    <%= link_to new_session_path(resource_name), class: "cyber-link-btn" do %>
      <i class="fas fa-sign-in-alt"></i>
      Se connecter
    <% end %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to new_registration_path(resource_name), class: "cyber-link-btn" do %>
      <i class="fas fa-user-plus"></i>
      Créer un compte
    <% end %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to new_password_path(resource_name), class: "cyber-link-btn secondary" do %>
      <i class="fas fa-key"></i>
      Mot de passe oublié ?
    <% end %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to new_confirmation_path(resource_name), class: "cyber-link-btn secondary" do %>
      <i class="fas fa-envelope"></i>
      Renvoyer les instructions
    <% end %>
  <% end %>
</div>

<style>
  .cyber-nav-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .cyber-link-btn {
    font-family: 'Orbitron', monospace;
    color: var(--cyber-primary);
    text-decoration: none;
    padding: 8px 16px;
    border: 1px solid var(--cyber-primary);
    border-radius: 4px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;

    &:hover {
      background: var(--cyber-primary);
      color: var(--cyber-white);
      box-shadow: 0 0 15px rgba(169, 17, 141, 0.4);
    }

    &.secondary {
      border-color: var(--cyber-gray);
      color: var(--cyber-gray);

      &:hover {
        border-color: var(--cyber-secondary);
        color: var(--cyber-secondary);
        background: transparent;
        box-shadow: 0 0 15px rgba(255, 151, 76, 0.3);
      }
    }
  }
</style>
