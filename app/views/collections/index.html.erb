<div class="home-banner">
  <div class="cyber-container">

    <!-- Terminal Header -->
    <div class="terminal-header">
      <div class="terminal-dots">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
      </div>
      <div class="terminal-title">collections.exe</div>
    </div>

    <!-- Collections Grid -->
    <% if @collections.any? %>
      <div class="cyber-grid">
        <% @collections.each do |collection| %>
          <%= link_to collection_categories_path(collection), class: "grid-item collection-cyber" do %>
            <div class="scan-line"></div>
            <div class="collection-header">
              <i class="fas fa-folder-open"></i>
              <span class="card-title"><%= collection.name %></span>
            </div>
            <div class="collection-stats">
              <span class="cyber-tag">
                <i class="fas fa-cube"></i>
                <%= collection.categories.sum { |c| c.items.count } %> items
              </span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>


    <!-- Empty State Cyberpunk -->
    <% if @collections.empty? %>
      <div class="cyber-empty-state">
        <div class="cyber-card">
          <div class="card-title">System Status</div>
          <div class="terminal-output">
            <p class="terminal-line">$ ls collections/</p>
            <p class="terminal-line error">// Aucune collection trouvée</p>
            <p class="terminal-line">$ initialize_new_collection --interactive</p>
            <p class="terminal-line success">// Cliquez sur <span class="cyber-highlight">+</span> pour démarrer</p>
          </div>
          <div class="mascotte-cyber">
            <%= image_tag "mascotte.png", class: "cyber-mascotte", alt: "Mascotte robot" %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
